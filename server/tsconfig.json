{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "module": "commonjs", // Use commonjs for module system
    "rootDir": ".", // Root directory for TypeScript files
    "outDir": "./dist", // Output directory for compiled JS files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Interop between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checks of all declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"], // Include all .ts files in the current directory
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
